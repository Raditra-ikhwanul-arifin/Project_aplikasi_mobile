<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:text="Buat Jadwalmu"
        android:textColor="#10095C"
        android:textSize="36dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="66dp" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_arrow_back_24"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <ImageView
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/jam"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:text="Jam"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="388dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:text="00.00"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="388dp" />

    <EditText
        android:id="@+id/judultugasInput"
        style="@style/ModernLabel"
        android:layout_width="299dp"
        android:layout_height="58dp"
        android:background="@drawable/rounded_edit_text_background"
        tools:ignore="DuplicateClickableBoundsCheck,DuplicateIds,MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:text="Judul Tugas"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:text="Tanggal dan Waktu"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="283dp" />

    <EditText
        android:id="@+id/judultugasInput"
        style="@style/ModernLabel"
        android:layout_width="302dp"
        android:layout_height="47dp"
        android:background="@drawable/rounded_edit_text_background"
        android:padding="10dp"
        android:textSize="16sp"
        tools:ignore="DuplicateIds,MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="327dp" />

    <EditText
        android:id="@+id/judultugasInput"
        style="@style/ModernLabel"
        android:layout_width="299dp"
        android:layout_height="98dp"
        android:background="@drawable/rounded_edit_text_background"
        tools:ignore="DuplicateClickableBoundsCheck,DuplicateIds,MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="469dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:text="Apa yang harus di lakukan?"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="438dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="275dp"
        android:layout_height="61dp"
        android:backgroundTint="#333333"
        android:text="Buat Jadwal"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="624dp" />

    <ImageView
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/date"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="335dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

    android:hint="Masukkan Judul Tugas"